<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_hsv"
    android:layout_width="match_parent"
    android:layout_height="@dimen/font_88"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_88"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/music_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_88">

            <LinearLayout
                android:id="@+id/music_body"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_88"
                android:background="@drawable/selector_music_item_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/music_img"
                    android:layout_width="@dimen/font_50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/font_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mlsd2" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/music_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="死神：剧场版·地狱篇"
                            android:textColor="#a200ff26" />

                        <TextView
                            android:id="@+id/music_hz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/font_10"
                            android:gravity="right"
                            android:text=".mp4"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/music_update_title"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/selector_tv_bg"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="@dimen/font_5"
                            android:text="确认"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/music_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="1.4G"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/music_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02:10:00"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/music_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="@dimen/font_88"
            android:background="#f54141"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#DDFFFFFF"
            android:visibility="visible" />
    </LinearLayout>
</HorizontalScrollView>